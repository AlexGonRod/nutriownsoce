		<header>
			<h1 class="title text-[#7e7e7e] text-xl text-left my-2 uppercase">
				Nutri-Score
			</h1>
		</header>

		<Form client:load />
        <Nutriscore scores={data} client:load/>
	</main>
</Layout>
